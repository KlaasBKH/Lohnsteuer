#include <iostream>
#include <iomanip>
#include <string>
using namespace std;

using std::cout; using std::setw;
using std::endl; using std::string;


 
 
int 
main () 
{
  
 
float BGehalt;
  
 
float LS;			/* Lohnsteuer */
  
 
float KS;			/* KirchenSteuer */
  
 
float KV;			/* Krankenversicherung */
  
 
float PV;			/* Pflegeversicherung */
  
 
float RV;			/*Rentenversicherung */
  
 
float AV;			/*Arbeitslosen verischerung */
  
 
float NV;			/* Netto verdienst */


std::string Vorname;
std::string Nachname;

cout << "Lohnsteuer Rechner von Klaas Precht\n" << endl;

std::cout << "Vorname?" << endl;
std::cin >> Vorname;

std::cout << "Nachname?" << endl;
std::cin >> Nachname;

cout << "Bitte geben Sie Ihr Brutto Gehalt ein" << endl;
cin >> BGehalt;

 
LS = BGehalt * 25 / 100;
  
 
KS = LS * 9 / 100;
  
 
KV = BGehalt * 14.6 / 100 / 2;
  
 
PV = BGehalt * 3.3 / 100 / 2;
  
 
RV = BGehalt * 18.6 / 100 / 2;
  
 
AV = BGehalt * 2.4 / 100 / 2;
  
 
NV = BGehalt - LS - KS - KV - PV - RV - AV;
  
 
 cout <<
    
"************************* Lohnsteuer ************************* \n\n" << Vorname << " " << Nachname << "\n"
    
 <<endl;
 cout << "---------------------------------------------------------------" << endl;
  
 
cout << "Gesamtgehalt Brutto:" << std::
    
setprecision (3)<< fixed << setw(20) << BGehalt << " EUR" << endl;

  
 
cout << "Steuerliche Abzuege:" << endl;
  
 
cout << "Lohnsteuer:" << std::
    
setprecision (2) << fixed << setw(20) <<  LS << " EUR" << endl;
  
 
cout << "Kirchensteuer:" << std::
    setprecision (2) << fixed << setw(20) <<  KS << " EUR" << std::
right << endl;
  
 
cout << "Steuerliche Abzuege (gesamt):" << std::
    
setprecision (2) << fixed << setw(20) << LS + KS << " EUR \n" << endl;

cout << "---------------------------------------------------------------" << endl;
  
 
cout << "Krankenversicherung:" << std::
    
setprecision (2) << fixed << setw(20) << KV << " EUR" << endl;
  
 
cout << "Pflegeversicherung:" << std::
    
setprecision (2) << fixed << setw(20) << PV << " EUR" << endl;
  
 
cout << "Rentenversicherung:" << std::
    
setprecision (2) << fixed << setw(20) << RV << " EUR" << endl;
  
 
cout << "Arbeitslosenversicherung:" << std::setprecision (2) << fixed << setw(50) << AV << " EUR" << endl;
  
 
cout << "sozialversicherungsrechtliche Abzuege (gesamt):" <<
    
setprecision (2) << fixed << setw(50) << KV + PV + RV + AV << " EUR" << endl;

cout << "---------------------------------------------------------------" << endl;
  
 
cout << "Netto Verdienst: " << setprecision (3) << fixed << setw(50) << NV << " EUR" <<
    endl;

 
} 
